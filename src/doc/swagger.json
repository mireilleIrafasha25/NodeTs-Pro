  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "Firstname": {
          "type": "string"
        },
        "Lastname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user"],
          "default": "user"
        }
      },
      "required": ["Firstname", "Lastname", "email", "password", "confirmPassword", "role"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["email", "password"]
    },
    "Verify": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": ["otp", "email"]
    },
    "ForgotPassword": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "ResetPassword": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        }
      },
      "required": ["password"]
    }
  }
